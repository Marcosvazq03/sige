<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Permiso para el modelo Alumnado-->
        <!-- Este registro define los permisos para el grupo de administradores en el modelo Alumnado -->
        <record model="ir.model.access" id="access_admin_alumnado">
            <field name="name">Access Alumnado Administrador</field>  <!-- Nombre del permiso -->
            <field name="model_id" ref="model_instituto_alumnado"/>  <!-- Referencia al modelo al que se aplican los permisos -->
            <field name="group_id" ref="group_administrador"/>  <!-- Referencia al grupo al que se aplican los permisos -->
            <field name="perm_read" eval="True"/>  <!-- Permiso de lectura -->
            <field name="perm_write" eval="True"/>  <!-- Permiso de escritura -->
            <field name="perm_create" eval="True"/>  <!-- Permiso de creación -->
            <field name="perm_unlink" eval="True"/>  <!-- Permiso de eliminación -->
        </record>

        <!-- Este registro define los permisos para el grupo de empresas en el modelo Alumnado -->
        <record model="ir.model.access" id="access_empresa_alumnado">
            <field name="name">Access Alumnado Empresa</field>
            <field name="model_id" ref="model_instituto_alumnado"/>
            <field name="group_id" ref="group_empresa"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Este registro define los permisos para el grupo de alumnos en el modelo Alumnado -->
        <record model="ir.model.access" id="access_alumnado_alumnado">
            <field name="name">Access Alumnado Alumnado</field>
            <field name="model_id" ref="model_instituto_alumnado"/>
            <field name="group_id" ref="group_alumnado"/>
            <field name="perm_read" eval="True"/>  <!-- Los alumnos pueden leer los registros -->
            <field name="perm_write" eval="False"/>  <!-- Los alumnos no pueden modificar los registros -->
            <field name="perm_create" eval="False"/>  <!-- Los alumnos no pueden crear nuevos registros -->
            <field name="perm_unlink" eval="False"/>  <!-- Los alumnos no pueden eliminar registros -->
        </record>
    </data>
</odoo>
