<odoo>
    <!-- Definición de la vista formulario para el modelo Alumnado -->
    <record id="view_alumnado_form" model="ir.ui.view">
        <field name="name">alumnado.form</field>  <!-- Nombre de la vista -->
        <field name="model">instituto.alumnado</field>  <!-- Modelo al que se aplica la vista -->
        <field name="arch" type="xml">
            <form string="Alumnado">  <!-- Definición del formulario -->
                <!-- Campos que se mostrarán en el formulario -->
                <field name="nombre"/>
                <field name="apellidos"/>
                <field name="fecha_nacimiento"/>
                <field name="direccion"/>
                <field name="codigo_postal"/>
                <field name="email"/>
                <field name="ciclo_formativo"/>
                <field name="coche"/>
                <field name="otros"/>
                <field name="nota_media"/>
                <field name="nota_media_texto"/>
                <field name="empresa_id"/>
                <field name="tutoriafct_id"/>
            </form>
        </field>
    </record>

    <!-- Definición de la vista lista para el modelo Alumnado -->
    <record id="view_alumnado_tree" model="ir.ui.view">
        <field name="name">alumnado.tree</field>  <!-- Nombre de la vista -->
        <field name="model">instituto.alumnado</field>  <!-- Modelo al que se aplica la vista -->
        <field name="arch" type="xml">
            <tree string="Alumnado">  <!-- Definición de la lista -->
                <!-- Campos que se mostrarán en la lista -->
                <field name="nombre"/>
                <field name="apellidos"/>
                <field name="fecha_nacimiento"/>
                <field name="direccion"/>
                <field name="codigo_postal"/>
                <field name="email"/>
                <field name="ciclo_formativo"/>
                <field name="coche"/>
                <field name="otros"/>
                <field name="nota_media"/>
                <field name="nota_media_texto"/>
                <field name="empresa_id"/>
                <field name="tutoriafct_id"/>
            </tree>
        </field>
    </record>

    <!-- Definición de la vista de búsqueda para el modelo Alumnado -->
    <record id="view_alumnado_search" model="ir.ui.view">
        <field name="name">alumnado.search</field>  <!-- Nombre de la vista -->
        <field name="model">instituto.alumnado</field>  <!-- Modelo al que se aplica la vista -->
        <field name="arch" type="xml">
            <search string="Buscar Alumnado">  <!-- Definición de la búsqueda -->
                <!-- Campos en los que se buscará -->
                <field name="nombre"/>
                <field name="apellidos"/>
                <!-- Filtro para estudiantes con nota media mayor a 9 -->
                <filter string="Nota Media > 9" name="nota_media" domain="[('nota_media', '>', 9)]"/>
                <!-- Filtro para estudiantes que tienen coche -->
                <filter string="Tiene Coche" name="tiene_coche" domain="[('coche', '=', True)]"/>
            </search>
        </field>
    </record>
</odoo>