<odoo>
    <data>

        <!-- Alumnado tree view -->
        <record id="view_alumnado_tree" model="ir.ui.view">
            <field name="name">alumnado.tree</field>
            <field name="model">instituto.alumnado</field>
            <field name="arch" type="xml">
                <tree string="Alumnado">
                    <field name="nombre"/>
                    <field name="apellidos"/>
                    <field name="ciclo_formativo"/>
                    <field name="empresa_id"/>
                </tree>
            </field>
        </record>

        <!-- Alumnado form view -->
        <record id="view_alumnado_form" model="ir.ui.view">
            <field name="name">alumnado.form</field>
            <field name="model">instituto.alumnado</field>
            <field name="arch" type="xml">
                <form string="Alumnado">
                    <sheet>
                        <group>
                            <field name="nombre"/>
                            <field name="apellidos"/>
                            <field name="fecha_nacimiento"/>
                            <field name="direccion"/>
                            <field name="codigo_postal"/>
                            <field name="email"/>
                            <field name="ciclo_formativo"/>
                            <field name="coche"/>
                            <field name="otros"/>
                            <field name="nota_media"/>
                            <field name="empresa_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>
